@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
  <div class="flex">
  @Html.ActionLink("Add new Stylist", "Create", "Stylists", null, new {@class = "btn btn-outline-dark"})
  @Html.ActionLink("Home", "Index", "Home", null, new {@class = "btn btn-outline-dark"})
</div>
}
else
{
  <ul>
  @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
    }
  </ul>

  <div class="flex">
  @Html.ActionLink("Add new Stylist", "Create", "Stylists", null, new {@class = "btn btn-outline-dark"})
  @Html.ActionLink("Add new Client", "Create", "Clients", null, new {@class = "btn btn-outline-dark"})
  @Html.ActionLink("Home", "Index", "Home", null, new {@class = "btn btn-outline-dark"})
</div>
}
