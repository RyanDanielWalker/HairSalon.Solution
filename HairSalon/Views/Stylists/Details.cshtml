@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Details for @Html.DisplayFor(model => model.Name)</h2>
<h3>Notes: @Html.DisplayFor(model => model.Notes)</h3>
<h4>Clients List:</h4>
<ul>
  @foreach (var client in ViewBag.Show)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details","Clients", new { id = client.ClientId })</li>
  }
</ul>
<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("View all Stylists", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
