@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new Stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Notes)
  @Html.TextBoxFor(model => model.Notes)
  <input type="submit" value="Add new Stylist" class="btn btn-outline-success" />
}

@Html.ActionLink("Show all Stylists", "Index", "Stylists", null, new { @class = "btn btn-outline-dark"})