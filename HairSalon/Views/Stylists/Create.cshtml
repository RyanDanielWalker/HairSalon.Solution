@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new Stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Notes)
  @Html.TextBoxFor(model => model.Notes)
  <input type="submit" value="Add new Stylist" />
}
<p>@Html.ActionLink("Show all Stylist", "Index")</p>