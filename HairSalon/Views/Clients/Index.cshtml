@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients:</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) |
  Stylist: @Html.ActionLink($"{client.Stylist.Name}", "Details", "Stylists", new {id = client.StylistId})
</li>
}

<div class="flex">
  @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-outline-dark"})
  @Html.ActionLink("View all Stylists", "Index", "Stylists", null, new { @class = "btn btn-outline-dark"})
  @Html.ActionLink("Add new Client", "Create", "Clients", null, new {@class = "btn btn-outline-dark"})
</div>