@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new Client</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Notes)
  @Html.TextBoxFor(model => model.Notes)
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add New Client" class="btn btn-default" />
}
@Html.ActionLink("Show all Clients", "Index", "Clients", null, new { @class = "btn btn-outline-dark"})
@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-outline-dark"})