@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>Details for @Html.DisplayFor(model => model.Name):</h1>
<h4><span class="underLine">Stylist</span>:</h4>
<p>@Html.DisplayFor(model => model.Stylist.Name)</p>
<h4><span class="underLine">Notes</span>:</h4>
<p>@Html.DisplayFor(model => model.Notes)</p>

<p>@Html.ActionLink("Edit Client", "Edit", new {id = Model.ClientId})</p>
<p>@Html.ActionLink("Delete Client", "Delete", new {id = Model.ClientId})</p>
<p>@Html.ActionLink("Back to Clients", "Index")</p>